@model SciFiReviews.Models.ViewModels.SignInViewModel

<div class="row">
    <div class="col-md-4">
        <h1>Sign In</h1>

        @if (!ViewContext.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="text-danger"></div>
        }

        <form asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
            <div class="form-group">
                <label class="sr-only">Username</label>
                <span asp-validation-for="Username" class="text-danger"></span>
                <input type="text" class="form-control" placeholder="Username" asp-for="Username" />
            </div>

            <div class="form-group">
                <label class="sr-only">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
            </div>

            <input type="submit" class="btn btn-default" value="Sign In" />
        </form>
    </div>
</div>
