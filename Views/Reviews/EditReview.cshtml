@model SciFiReviews.Models.ViewModels.ReviewEditViewModel

<div class="row">
    <h1>Edit Review</h1>

    @if (!ViewContext.ModelState.IsValid)
    {
        <div asp-validation-summary="All"></div>
    }

        <form method="post" asp-action="EditReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Review Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
                <input type="text" class="form-control" asp-for="Title" value="@Model.Title" />
            </div>

            <div class="form-group">
                <label>Review Body</label>
                <span asp-validation-for="Body" class="text-danger"></span>
                <textarea rows="12" type="text" class="form-control" asp-for="Body" value="@Model.Body"></textarea>
            </div>
            <div class="form-group">
                <label>Your Rating</label>
                <select class="form-control" asp-for="Rating" placeholder="Movie Rating" style="width:15%;">
                    @for (int i = 1; i < 6; i++)
                    {
                        if (i == Model.Rating)
                        {
                            <option value="@i" selected>@i</option>
                        }
                        else
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
            </div>

            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <br />

            <input type="submit" class="btn btn-warning" value="Save Changes" />

            <button type="reset" class="btn btn-default" onclick="history.back()">Cancel</button>
        </form>

    <br />

    <form method="post" asp-action="DeleteReview">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger" onclick="confirm('Are you sure you want to delete this review?')">
            Delete Review
        </button>
    </form>
</div>

