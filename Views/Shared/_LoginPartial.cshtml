
@if (!User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Auth" asp-action="SignUp">Register</a></li>
        <li><a asp-controller="Auth" asp-action="SignIn">SignIn</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <form method="post" asp-controller="Auth" asp-action="SignOut">
                <input type="submit" class="navbar-link" value="Sign Out" style="margin-top:15px;"/>
            </form>
        </li>
    </ul>
}

